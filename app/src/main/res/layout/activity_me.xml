                    android:textSize="@dimen/font" />

            </LinearLayout>-->
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:layout_weight="1"
            android:drawableLeft="@drawable/img_p_data_icon"
            android:drawablePadding="@dimen/space_little"
            android:gravity="center_vertical"
            android:text="个人信息" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space"
            android:src="@drawable/img_fown_page" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:layout_weight="1"
            android:drawableLeft="@drawable/img_edit_pass"
            android:drawablePadding="@dimen/space_little"
            android:gravity="center_vertical"
            android:text="修改密码" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space"
            android:src="@drawable/img_fown_page" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_update_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:layout_weight="1"
            android:drawableLeft="@drawable/img_updata"
            android:drawablePadding="@dimen/space_little"
            android:gravity="center_vertical"
            android:text="更新数据库" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有新版本 "
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space"
            android:src="@drawable/img_fown_page" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_out_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space"
        android:background="@color/dominant_hue"
        android:gravity="center"
        android:padding="@dimen/space"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal">

        <TextView
            android:id="@+id/tv_come"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技术支持：燕赵互联"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_small"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>
