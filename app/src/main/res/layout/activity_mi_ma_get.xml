<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/component_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_fengexian"
        android:background="@color/fengexian1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="输入手机号码"
            android:inputType="number"
            android:padding="@dimen/space"
            android:textColor="@color/gray"
            android:textSize="@dimen/font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_fengexian"
            android:background="@color/fengexian2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_yanzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="输入验证码"
                android:inputType="number"
                android:padding="@dimen/space"
                android:textColor="@color/gray"
                android:textSize="@dimen/font" />

            <TextView
                android:id="@+id/tv_yanzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/blue"
                android:textSize="@dimen/font" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_fengexian"
            android:background="@color/fengexian2" />

        <EditText
            android:id="@+id/et_mima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="输入密码（六位以上）"
            android:inputType="textPassword"
            android:padding="@dimen/space"
            android:textColor="@color/gray"
            android:textSize="@dimen/font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_fengexian"
            android:background="@color/fengexian2" />

        <TextView
            android:id="@+id/tv_wancheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_pad1"
            android:background="@color/red"
            android:gravity="center"
            android:padding="@dimen/space"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big" />
    </LinearLayout>
</LinearLayout>
