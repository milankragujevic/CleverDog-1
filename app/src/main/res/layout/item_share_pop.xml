<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_big"
        android:background="@drawable/shape_corners_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/space_big">

        <TextView
            android:id="@+id/tv_WX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/space"
            android:drawableTop="@drawable/img_wechat_icon"
            android:gravity="center"
            android:text="微信好友"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/space"
            android:drawableTop="@drawable/img_fc_icon"
            android:gravity="center"
            android:text="微信朋友圈"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />
    </LinearLayout>
</LinearLayout>